@model Model.Bairro
@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section breadcrumb{
    <li>
        <i class="ace-icon fa fa-home home-icon"></i>
        <a href="@Url.Action("Index","Home", null)">Home</a>
    </li>
    <li>
        <a href="@Url.Action("Index", "Bairro")">Bairro</a>
    </li>
    <li class="active">Detalhes</li>
}

<div class="page-content">
    <div class="page-header">
        <h1>
            Bairro
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Visualizar Detalhes
            </small>
        </h1>
    </div><!-- /.page-header -->

    <div class="row">
        <div class="col-xs-12">
            <dl>
                @Html.Partial("~/Areas/Administrativo/Views/Bairro/_PartialDetailContentPanel.cshtml", Model)
            </dl>
        </div><!-- /.col -->
        <p>
            @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
        </p>
    </div><!-- /.row -->
</div><!-- /.page-content -->

@section script{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-imovel").addClass("active open");
            $("#submenu-bairro").addClass("active open");
        });
    </script>
}