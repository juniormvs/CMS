@model Model.Equipe

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/shared/_LayoutAdmin.cshtml";
}

@section head{
    <link rel="stylesheet" href="@Url.Content("~/ContentAdmin/css/jquery.gritter.css")" />

    @*<script src="@Url.Content("~/ckeditor/ckeditor.js")"></script>*@
    <script type="text/javascript">
        var pathSingleUpload = '@Url.Action("Upload","Equipe")';
    </script>
}
@section breadcrumb{
    <li>
        <i class="ace-icon fa fa-home home-icon"></i>
        <a href="@Url.Action("Index","Home", null)">Home</a>
    </li>
    <li>
        <a href="@Url.Action("Index", "Equipe")">Equipe</a>
    </li>
    <li class="active">Editar</li>
}
<div class="page-content">
    <div class="page-header">
        <h1>
            Equipe
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Editar
            </small>
        </h1>
    </div><!-- /.page-header -->

    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    @Html.Partial("~/Areas/Administrativo/Views/Equipe/_PartialEditContentPanel.cshtml", Model)
                </div>
            }
        </div>
    </div>
</div>
@section plugin{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script src="@Url.Content("~/ContentAdmin/js/x-editable/bootstrap-editable.js")"></script>
    <script src="@Url.Content("~/ContentAdmin/js/x-editable/ace-editable.js")"></script>
    <script src="@Url.Content("~/ContentAdmin/js/jquery.gritter.js")"></script>


    <script src="@Url.Content("~/ContentAdmin/js/ace/ace.widget-box.js")"></script>

    <script src="@Url.Content("~/Scripts/app/SingleUpload.js")"></script>
}

@section script{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-Equipe").addClass("active open");
            $("#cancel").disableValidation = true;
            $("#avatar").text("Enviar Foto");

            //CKEDITOR.replace('Pessoa_Bio', {
            //    extraPlugins: 'autogrow',
            //    autoGrow_bottomSpace: 50
            //});
        });
    </script>
}


