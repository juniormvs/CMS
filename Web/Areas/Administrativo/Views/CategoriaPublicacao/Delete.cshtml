@model Model.CategoriaPublicacao
@{
    ViewBag.Title = "Excluir";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section breadcrumb{
    <li>
        <i class="ace-icon fa fa-home home-icon"></i>
        <a href="@Url.Action("Index","Home", null)">Home</a>
    </li>

    <li>
        <a href="@Url.Action("Index", "Publicacao")">Publicação</a>
    </li>
    <li>
        <a href="@Url.Action("Index", "CategoriaPublicacao")">Categoria</a>
    </li>
    <li class="active">Excluir</li>
}




<div class="page-content">
    <div class="page-header">
        <h1>
            Categoria
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Excluir
            </small>
        </h1>
    </div><!-- /.page-header -->

    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->

            <h3>Confirmar a exclusão do item abaixo?</h3>
            <dl class="dl-horizontal">
                @Html.Partial("~/Areas/Administrativo/Views/CategoriaPublicacao/_PartialDetailContentPanel.cshtml", Model)
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Excluir" class="btn btn-danger" /> |
                    @Html.ActionLink("Voltar / Cancelar", "Index", null, new { @class = "btn btn-default" })
                </div>
            }
        </div>
        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
</div><!-- /.row -->
</div><!-- /.page-content -->
@section script{
    <script type="text/javascript">
        $("#menu-publicacao").addClass("active open");
        $("#submenu-categoria").addClass("active");
    </script>
}
